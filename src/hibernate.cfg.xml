<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sport5000</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <property name="hibernate.show_sql">true</property>
        
        <mapping class = "Modelo.Administrador" package= "Modelo" resource ="/Modelo.Administrador.hbm.xml"/>
        <mapping class = "Modelo.Cliente" package= "Modelo" resource ="/Modelo.Cliente.hbm.xml"/> 
        <mapping class = "Modelo.Ofertas" package= "Modelo" resource ="/Modelo.Ofertas.hbm.xml"/> 
        <mapping class = "Modelo.Productos" package= "Modelo" resource ="/Modelo.Productos.hbm.xml"/>  
    </session-factory>
</hibernate-configuration>
